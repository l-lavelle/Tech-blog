<div class="container">
    <h1 class="title">Sign Up</h1>
    <p>To create an account please enter name, username, and password. </p>
    <div class="field">
        <label class="label">Name</label>
        <div class="control">
            <input id="name-signup" class="input" type="text" placeholder="Text input">
        </div>
    </div>

    <div class="field">
        <label class="label">Username</label>
        <div class="control">
            <input id="username-signup" class="input" type="text" placeholder="Text input">
    </div>

    <div class="field">
        <label class="label">Password</label>
        <div class="control">
        <input id="password-signup" class="input" type="text" placeholder="Text input">
    </div>

    <div class="field">
        <label class="label">Confirm Password</label>
        <div class="control">
        <input id="password-confirm" class="input" type="text" placeholder="Text input">
    </div>

</div>
<div id="submit-btn" class="columns is-centered">
  <div  class="column has-text-centered is-2">
    <a class="button is-link">Submit</a>
  </div>
</div>
<script src="/js/signup.js"></script>