<article class="media">
    <div class="media-content mobile-blog">
        <div id="{{id}}"  class="content container full-post">
            <p>
                <div class="has-text-centered"><strong>{{blog.blog_title}}</strong></div>
                <br>
                {{blog.blog_text}}
                <div class="mt-3">Posted by: {{blog.user.name}} on {{format_date blog.createdAt}}</div>
            </p>

        <div class="media-content">
            <div class="field">
            <p class="control">
                <textarea id="comment-text" class="textarea" placeholder="Add a comment..."></textarea>
            </p>
            </div>
            <div class="field">
            <p class="control">
                <button id="add-comment" class="button">Post comment</button>
            </p>
            </div>
        </div>
        <h4 class="title is-4 mt-3">Comments</h4>
        {{#each blog.comments as |comment|}}
        <div class="content has-text-centered user-comment">
            <p class="mt-3">{{comment_text}}</p>
            <small>- {{format_date createdAt}} -</small>
        </div>
        {{/each}}
        
    </div>
</article>

<script src="/js/singleblog.js"></script>