{{#each userPosts as |posts|}}
<article class="media">
    <div class="media-content">
        <div class="content container is-mobile">
            <p>
            <div class="is-flex is-justify-content-space-between">
                <div><strong>{{blog_title}}</strong></div>
                <div>Posted on {{format_date createdAt}}</div>
            </div>
            <br>
            {{blog_text}}
            <br>
            </p>
        </div>
    </div>
</article>
{{/each}}


<a href="/api/blogs/{{userId}}/addpost" class="button is-primary">
    <strong>New Post</strong>
</a>