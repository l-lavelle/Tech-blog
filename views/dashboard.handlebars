<div class="container">
    <h1 class="title">Welcome to your Dashboard!</h1>
    <p>Here you can add new posts or update/delete posts by clicking on the post name!</p>
    <br>
    <a href="/api/blogs/{{userId}}/addpost" id="new-post" class="button is-primary">
        <strong>New Post</strong>
    </a>
</div>

<div>
    {{#each userPosts as |posts|}}
    <article class="media">
        <div class="media-content">
            <div class="content container is-mobile">
                <p>
                <div class="is-flex is-justify-content-space-between">
                    <a href="/api/blogs/{{id}}/options">
                    <div class="blogTitle"><strong>{{blog_title}}</strong></div>
                    </a>
                    <div>Posted on {{format_date createdAt}}</div>
                </div>
                <br>
                {{blog_text}}
                <br>
                </p>
            </div>
        </div>
    </article>
    {{/each}}
</div>


