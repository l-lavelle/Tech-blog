{{#each currentPostsData as |posts|}}
<article class="media">
    <div class="media-content">
        <div class="content container is-mobile">
            <p>
            <div class="is-flex is-justify-content-space-between">
                <div><strong>{{posts.blog_title}}</strong></div>
                <div>Posted by: {{posts.user.name}} on {{posts.createdAt}}</div>
            </div>
            <br>
            {{posts.blog_text}}
            <br>
            <small> <a>Comment</a> </small>
            </p>
        </div>
    </div>
</article>

